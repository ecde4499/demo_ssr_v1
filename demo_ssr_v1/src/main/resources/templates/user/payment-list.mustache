{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>결제 내역</b></h4>
        </div>

        <!--  외부 카드  -->
        <div class="card-body">
            {{#paymentList}}
            <div class="d-flex">
                <div class="flex-grow-1">
                    <h5 class="card-title mb-2">결제# {{id}}</h5>
                    <p class="text-muted mb-2">
                        <i class="fas fa-receipt"></i> 주문번호: {{merchantUid}}
                    </p>
                    <p class="text-muted mb-2">
                        <i class="fas fa-receipt"></i> 결제번호: {{impUid}}
                    </p>
                    <p class="text-muted mb-2">
                        <i class="fas fa-receipt"></i> 결제일: {{timestamp}}
                    </p>
                    <p class="text-muted mb-2">
                        <i class="fas fa-receipt"></i> 상태: {{statusDisplay}}
                    </p>
                </div>
                <div class="text-end">
                    <span class="badge bg-primary fs-6">{{amount}} P</span>
                    {{#isRefundable}}
                        <a href="/refund/request/1" class="btn btn-outline-danger btn-sm">환불하기</a>
                    {{/isRefundable}}
                </div>
            </div>
            {{/paymentList}}
            <!--  유료 결제 내역이 없을 경우          -->
            {{^paymentList}}
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h5>결제 내역이 없습니다</h5>
                    <p>결제를 진행해 보세요</p>
                    <a href="/board/list" class="btn btn-primary">게시글 목록으로</a>
                </div>
            {{/paymentList}}
            <div class="mt-4">
                <a href="/user/detail" class="btn btn-secondary">회원정보로 돌아가기</a>
            </div>
        </div>
    </div>
</div>



{{> layout/footer}}